.reviews
  padding-bottom 70px
  +min-breakpoint(medium)
    padding-bottom 105px
  +min-breakpoint(large)
    padding-bottom 112px

.reviews__title
  heading2lvl()

.reviews__list
  reset-list()

.reviews__item
  width 100%
  +min-breakpoint(medium)
    width auto

.reviews__item blockquote
  margin 30px auto
  padding 25px 21px 25px 56px
  max-width 290px
  line-height 21px
  box-shadow 0 0 25px rgba(208, 208, 208, 0.25)
  background-image url('./img/quote.svg')
  background-repeat no-repeat
  background-position 25px 29px
  +min-breakpoint(medium)
    max-width 442px
    padding 35px 33px 35px 70px

.reviews__meta
  display none
  +min-breakpoint(medium)
    display block

.reviews__item p
  margin 0
