.features
  overflow hidden
  padding-top 65px
  padding-bottom 70px
  +min-breakpoint(medium)
    padding-top 120px
  +min-breakpoint(large)
    padding-top 137px

.features__title
  heading2lvl()

.features__list
  position relative
  reset-list()
  +min-breakpoint(medium)
    display grid
    grid-template-columns auto auto
    grid-gap 30px
  +min-breakpoint(large)
    grid-template-columns auto auto auto
  &::before
    content ""
    position absolute
    top -94px
    right -63px
    background-image url("./img/paw-bg.svg")
    background-repeat no-repeat
    width 150px
    height 136px
    background-size 100% auto
    background-position 50%
    +min-breakpoint(medium)
      top -235px
      right -160px
      width 370px
      height 370px
    +min-breakpoint(large)
      background-size initial
      right -165px

.features__item
  position relative
  padding 105px 25px 20px
  margin-bottom 30px
  background-color white
  box-shadow 0 0 25px rgba(208, 208, 208, 0.25)
  border-radius 8px
  +min-breakpoint(medium)
    padding-top 120px
    margin-bottom 0
    width 324px
  +min-breakpoint(large)
    width 370px
    padding-top 146px
    padding-left 30px
    padding-bottom 30px
  &:nth-child(5)
    padding-right 10px
  &:last-child
    margin-bottom 0

.features__name
  margin 0 0 15px 0
  font-family "Rubik"
  font-size 18px
  line-height 25px
  font-weight 500
  white-space nowrap
  +min-breakpoint(medium)
    font-size 20px
    line-height 28px

.features__description
  margin 0
  line-height 21px

  & .separator
    +min-breakpoint(medium)
      display none
  & .separator--tablet
      display none
      +min-breakpoint(medium)
        display block

.features__icon-wrapper
  position absolute
  top 25px
  left 25px
  width 60px
  height 60px
  +min-breakpoint(medium)
    width 75px
    height 75px
  +min-breakpoint(large)
    width 91px
    height 91px