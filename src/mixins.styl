/*breakpoints*/
media_queries_max = {
    large: "(max-width: 1100px)",
    medium: "(max-width: 767px)",
    small: "(max-width: 320px)"
}

max-breakpoint(breakpoints)
  conditions = ()
  for breakpoint in breakpoints
    push(conditions, media_queries_max[breakpoint])
  conditions = join(", ", conditions)
  @media conditions
    {block}

media_queries_min = {
    large: "(min-width: 1100px)",
    medium: "(min-width: 768px)",
    small: "(min-width: 320px)"
}

min-breakpoint(breakpoints)
  conditions = ()
  for breakpoint in breakpoints
    push(conditions, media_queries_min[breakpoint])
  conditions = join(", ", conditions)
  @media conditions
    {block}

reset-list()
  margin 0
  padding 0
  list-style none