/*breakpoints*/
media_queries_max = {
    large: "(max-width: 1100px)",
    medium: "(max-width: 767px)",
    small: "(max-width: 320px)"
}

max-breakpoint(breakpoints)
  conditions = ()
  for breakpoint in breakpoints
    push(conditions, media_queries_max[breakpoint])
  conditions = join(", ", conditions)
  @media conditions
    {block}

media_queries_min = {
    large: "(min-width: 1100px)",
    medium: "(min-width: 768px)",
    small: "(min-width: 320px)"
}

min-breakpoint(breakpoints)
  conditions = ()
  for breakpoint in breakpoints
    push(conditions, media_queries_min[breakpoint])
  conditions = join(", ", conditions)
  @media conditions
    {block}

reset-list()
  margin 0
  padding 0
  list-style none

heading2lvl()
  margin 0 0 35px 0
  text-align center
  font-family "Rubik"
  font-weight 600
  font-size 28px
  line-height 33px
+min-breakpoint(medium)
  margin-bottom 45px
  font-size 36px
  line-height 43px
+min-breakpoint(large)
  margin-bottom 55px
