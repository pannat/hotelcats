html
  box-sizing border-box

*,
*::before,
*::after
  -webkit-box-sizing inherit

body
  min-width 320px
  margin 0
  padding 0
  background-color var(--main-white)
  font-family "Lato", "Rubik", sans-serif
  font-size 15px
  line-height 18px
  color var(--main-text-color)

input,
textarea,
select,
button,
a
  transition-property color, background-color
  transition-duration .4s
  font inherit
  text-decoration none
  color inherit

img
  width 100%
  height auto

.container
  max-width 290px
  margin 0 auto
  +min-breakpoint(medium)
    max-width 678px
  +min-breakpoint(large)
    max-width 1170px


.visually-hidden
  position absolute

  width 1px
  height 1px
  margin -1px
  border 0
  padding 0

  clip rect(0 0 0 0)
  overflow hidden

.button
  transition-property color, background-color
  transition-duration .4s
  position relative
  display inline-block
  font-size 16px
  line-height 19px
  font-weight 600
  padding 15px 63px 16px 30px
  border none
  box-shadow 0 5px 25px rgba(26, 33, 47, 0.1)
  border-radius 25px
  color var(--main-white)
  background-color var(--orange)
  &:hover,
  &:focus
    background-color var(--orange)
    color var(--main-white)
  &--invert
    color var(--main-text-color)
    background-color var(--main-white)
    &:hover,
    &:focus
      background-color var(--orange)
      color var(--main-white)

.button__text
    position relative

.button__icon
  transition-property color, background-color
  transition-duration .4s
  position absolute
  top 50%
  margin-top -18px
  right 7px
  display inline-flex
  justify-content center
  align-items center
  width 36px
  height 36px
  border-radius 50%
  color var(--orange)
  background-color var(--main-white)
  &--invert
    background-color var(--orange)
    color var(--main-white)

.button:hover .button__icon,
.button:focus .button__icon
    background-color var(--orange)
    color var(--main-white)
.button:hover .button__icon--invert,
.button:focus .button__icon--invert
    color var(--orange)
    background-color var(--main-white)
