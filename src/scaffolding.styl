html
  box-sizing border-box

*,
*::before,
*::after
  -webkit-box-sizing inherit

body
  min-width 320px
  margin 0
  padding 0
  background-color var(--body-background-color)
  font-family "Lato", "Rubik", sans-serif
  font-size 15px
  line-height 18px
  color var(--main-text-color)

input,
textarea,
select,
button,
a
  font inherit
  text-decoration none


.visually-hidden
  position absolute

  width 1px
  height 1px
  margin -1px
  border 0
  padding 0

  clip rect(0 0 0 0)
  overflow hidden

.button
  display inline-block

.button__text
    position relative
